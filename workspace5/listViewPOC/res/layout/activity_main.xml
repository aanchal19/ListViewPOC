<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.listviewpoc.MainActivity" >
    
    <EditText 
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint"/>
    
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="300dp" 
        android:scrollbars="vertical"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_button_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_item_notify" />

        <Button
            android:id="@+id/add_button_not_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_item_not_notify" />
        
    </LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/remove_button_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove_item_notify" />

        <Button
            android:id="@+id/remove_button_not_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove_item_not_notify" />
        
    </LinearLayout>
    
</LinearLayout>
